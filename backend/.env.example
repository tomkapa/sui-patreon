# Backend Environment Variables
# Copy to .env for local development
# For Railway deployment, copy these to Railway environment variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
# Local: Use your local PostgreSQL instance
# Railway: Automatically set by Railway PostgreSQL plugin (${{Postgres.DATABASE_URL}})
DATABASE_URL=postgresql://admin:password@localhost:5432/sui_patreon?schema=public

# Sui Blockchain Configuration
PACKAGE_ID=0xcac1eabc44bc10496c5adb8892fd20f242e7e1b08974c097fc6020590d976990
SUI_NETWORK=testnet
POLL_INTERVAL=5000
QUERY_LIMIT=50

# Walrus Decentralized Storage
WALRUS_PUBLISHER_URL=https://publisher.walrus-testnet.walrus.space
WALRUS_AGGREGATOR_URL=https://aggregator.walrus-testnet.walrus.space

# Seal Encryption (optional)
SEAL_PACKAGE_ID=
# Optional: Custom key server configurations (JSON array)
# SEAL_KEY_SERVERS=[{"objectId":"0x...","weight":1},{"objectId":"0x...","weight":1}]

# MinIO S3 Storage (for avatars)
# REQUIRED: Get credentials from https://minio.7k.ag or your MinIO provider
MINIO_ENDPOINT=minio.7k.ag
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=sui-patreon
MINIO_REGION=us-east-1
MINIO_USE_SSL=true
MINIO_PUBLIC_URL=https://minio.7k.ag/sui-patreon

# Faucet Configuration
# REQUIRED: Wallet private key for the faucet (keep this secret!)
# Export from Sui wallet: sui keytool export --key-identity <address>
FAUCET_WALLET_PRIVATE_KEY=
# REQUIRED: JSON array of tokens to distribute (coinType and amount for each)
# Amounts are in smallest unit (MIST for SUI, base units for USDC/WAL)
# Example for testnet:
# FAUCET_TOKENS=[{"coinType":"0x2::sui::SUI","amount":"100000000"},{"coinType":"0xUSDC_PACKAGE::usdc::USDC","amount":"1000000000"},{"coinType":"0xWAL_PACKAGE::wal::WAL","amount":"100000000"}]
FAUCET_TOKENS=[{"coinType":"0x2::sui::SUI","amount":"100000000"}]
